<h1 class="page-title-text"><%= @user.name %></h1>
<div class="container">
	<button type="button" class="btn btn-link">
		<%= link_to "目標を設定する", new_goal_path %>
	</button>
</div>
<div class="container">
	<% @goals.each do |goal| %>
		<div class="my-goals">
			<h3><%= goal.title %></h3>
			<h3><%= goal.status %></h3>
			<h3>期限：<%= goal.due_day %></h3>
			<h3>残り：<%= (goal.due_day - Date.today).to_i %>日</h3>
			<p>投稿数： <%= @records.where(goal_id: goal.id).count %></p>
			<%= pie_chart [["アリ", @ant.where(goal_id: goal.id).count],["キリギリス", @grasshopper.where(goal_id: goal.id).count]],
				colors: ["#f4a460", "#6b8e23"],
				legend: false %>
			<% if @records.where(goal_id: goal.id).empty? %>
				<p>データがありません</p>
			<% end %>
			<h6><%= link_to "詳細", goal_path(goal) %></h6>
			<% if @user.id == current_user.id %>
				<h6><%= link_to "アクションを投稿する", new_record_path %></h6>
			<% end %>
		</div>
	<% end %>
</div>