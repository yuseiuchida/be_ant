<div class="wrapper">
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>カテゴリー一覧</h1>
            <div class="mt-3">
              <%= link_to 'カテゴリーを追加する', new_admin_kind_path, class: "btn btn-warning" %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main content -->
    <section class="content">
			<div class="col-md-12">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">カテゴリー名</th>
							<th scope="col">作成日時</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						<% @kinds.each do |kind| %>
							<tr>
								<td><%= kind.id %></td>
								<td><%= kind.name %></td>
								<td><%= kind.created_at.strftime("%Y-%m-%d %H:%M") %></td>
								<td>
									<%= link_to '詳細', admin_kind_path(kind), class: "btn btn-info" %>
									<%= link_to '編集', edit_admin_kind_path(kind), class: "btn btn-success" %>
									<%= link_to '削除', admin_kind_path(kind), class: "btn btn-danger", method: :delete %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</section>
  </div>
</div>