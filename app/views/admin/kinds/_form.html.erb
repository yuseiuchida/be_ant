<div class="card card-primary">
	<div class="card-body">
		<%= form_with model: @kind, url: admin_kinds_path(@kind), local: true do |f| %>
			<div class="form-group">
				<%= f.label :name, "カテゴリー名", class: "form-group-label" %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
			<div class="text-center mt-3">
				<%= f.submit "追加", class: 'btn btn-warning btn-lg' %>
			</div>
		<% end %>
	</div>
</div>