<div class="card card-primary">
	<div class="card-body">
		<%= form_with model: @record, url: admin_record_path(@record), local: true do |f| %>
			<div class="form-group">
				<%= f.label :content, "アクション", class: "form-group-label" %>
				<%= f.text_field :content, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :bug_status, "ステータス", class: "form-group-label" %>
				<%= f.select :bug_status, Record.bug_statuses.keys, class: "form-control" %>
			</div>
			<div class="text-center mt-3">
				<%= f.submit "編集", class: 'btn btn-success btn-lg' %>
			</div>
		<% end %>
	</div>
</div>