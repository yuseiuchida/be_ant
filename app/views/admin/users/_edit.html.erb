<div class="card card-primary">
	<div class="card-body">
		<%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
			<div class="form-group">
				<%= f.label :name, "名前", class: "form-group-label" %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :email, "メールアドレス", class: "form-group-label" %>
				<%= f.text_field :email, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :role, "権限", class: "form-group-label" %>
				<%= f.select :role, User.roles.keys, class: "form-control" %>
			</div>
			<div class="text-center mt-3">
				<%= f.submit "編集", class: 'btn btn-success btn-lg' %>
			</div>
		<% end %>
	</div>
</div>