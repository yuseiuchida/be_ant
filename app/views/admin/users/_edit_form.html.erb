<div class="card card-primary">
	<div class="card-body">
		<%= form_with model: @user, url: admin_user_path(@user), local: true do |f| %>
			<div class="form-group">
				<%= f.label :name, "名前", class: "form-group-label" %>
				<%= f.text_field :name, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :email, "メールアドレス", class: "form-group-label" %>
				<%= f.text_field :email, class: "form-control" %>
			</div>
			<div class="form-check form-check-inline">
				<%= f.radio_button :role, "admin", class: "form-check-input" %>
				<%= f.label :role, "admin", class: "form-check-label" %>
			</div>
			<div class="form-check form-check-inline">
				<%= f.radio_button :role, "general", class: "form-check-input" %>
				<%= f.label :role, "general", class: "form-check-label" %>
			</div>
			<div class="text-center mt-3">
				<%= f.submit "編集", class: 'btn btn-success btn-lg' %>
			</div>
		<% end %>
	</div>
</div>